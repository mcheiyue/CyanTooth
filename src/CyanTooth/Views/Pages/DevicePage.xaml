<Page x:Class="CyanTooth.Views.Pages.DevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:CyanTooth.Controls"
      xmlns:vm="clr-namespace:CyanTooth.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DevicePage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search & Refresh -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ui:TextBox Grid.Column="0" 
                       PlaceholderText="搜索设备..."
                       Icon="{ui:SymbolIcon Search24}"
                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,12,0"/>

            <ui:Button Grid.Column="1" 
                      Content="刷新设备"
                      Icon="{ui:SymbolIcon ArrowSync24}" 
                      Command="{Binding RefreshCommand}"/>
        </Grid>

        <!-- Device List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding DevicesView}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:DeviceCard Device="{Binding}" IsCompact="False"
                                                ConnectCommand="{Binding DataContext.ToggleConnectionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                FavoriteCommand="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Margin="0,40,0,0"
                           Visibility="{Binding IsRefreshing, Converter={StaticResource BoolToVis}}">
                    <ui:ProgressRing IsIndeterminate="True"/>
                    <TextBlock Text="正在搜索设备..." Margin="0,12,0,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
               BorderThickness="0,1,0,0" 
               BorderBrush="{DynamicResource ControlElevationBorderBrush}"
               Padding="0,12,0,0"
               Margin="0,12,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="{Binding TotalDeviceCount, Mode=OneWay}"/>
                        <Run Text="个设备 • "/>
                        <Run Text="{Binding ConnectedDeviceCount, Mode=OneWay}"/>
                        <Run Text="个已连接"/>
                    </TextBlock>
                </StackPanel>

                <ui:Button HorizontalAlignment="Right"
                          Content="打开系统蓝牙设置"
                          Icon="{ui:SymbolIcon Settings24}"
                          Appearance="Transparent"
                          Click="OpenWindowsSettings_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
